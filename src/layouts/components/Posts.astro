---
import dateFormat from "@/lib/utils/dateFormat";
import { humanize, plainify, slugify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import { BiCalendarEdit, BiCategoryAlt, BiUserCircle } from "react-icons/bi";

type Props = {
  posts: any[];
  className?: string;
  fluid?: boolean;
};

const { className, posts, fluid } = Astro.props;
---

<div class={`row gy-5 gx-4 ${className} ${posts.length === 1 ? "justify-center" : ""} `}>
  {
    posts.map((post, i: number) => (
      <div class={i === 0 && fluid !== false ? "col-12" : "col-12 sm:col-6"}>
        {post.data.image && (
          <a
            href={`/blog/${post.slug}`}
            class={`rounded-lg block hover:text-primary overflow-hidden group shadow-sm ${i === 0 && fluid !== false ? "image-container-fluid" : "image-container"}`}
          >
            <Image
              class="group-hover:scale-[1.05] transition duration-500 w-full h-full object-cover"
              src={post.data.image}
              alt={post.data.title || "Gambar Artikel Amina"}
              width={i === 0 && fluid !== false ? 925 : 445}
              height={i === 0 && fluid !== false ? 475 : 230}
              loading={i === 0 ? "eager" : "lazy"}
            />
          </a>
        )}

        <ul class="mt-6 mb-4 flex flex-wrap items-center text-text text-sm">
          <li class="mr-5 flex items-center font-medium">
            <BiUserCircle className="mr-1 h-4 w-4 text-primary" />
            <a href={`/authors/${slugify(post.data.authors?.[0] || "admin")}`} class="hover:text-primary transition">
              {post.data.authors?.[0] || "Admin"}
            </a>
          </li>
          <li class="mr-5 flex items-center font-medium">
            <BiCalendarEdit className="mr-1 h-4 w-4 text-gray-600" />
            {post.data.date ? dateFormat(post.data.date) : "N/A"}
          </li>
          <li class="mr-5 flex items-center flex-wrap">
            <BiCategoryAlt className="mr-1 h-4 w-4 text-gray-600" />
            <ul class="flex">
              {(post.data.categories || []).map((category: string, index: number) => (
                <li class="inline-block">
                  <a href={`/categories/${slugify(category)}`} class="mr-2 hover:text-primary font-bold">
                    {humanize(category)}{index !== (post.data.categories.length - 1) && ","}
                  </a>
                </li>
              ))}
            </ul>
          </li>
        </ul>

        <h3 class="mb-4 h3-title">
          <a
            href={`/blog/${post.slug}`}
            class="block hover:text-primary transition duration-300 leading-snug"
            set:html={post.data.title || "Judul Tidak Tersedia"}
          />
        </h3>
        <p class="text-text line-clamp-2" set:html={plainify(post.body || post.data.description || "")} />
      </div>
    ))
  }
</div>

<style>
  /* Solusi CSS untuk menyeragamkan ukuran gambar */
  
  .image-container {
    width: 100%;
    aspect-ratio: 16 / 9 !important; /* Memaksa rasio 16:9 agar sejajar */
    height: auto !important;
    display: block;
    background-color: #f8f8f8;
    position: relative;
    overflow: hidden;
  }
  
  .image-container-fluid {
    width: 100%;
    aspect-ratio: 21 / 9 !important; /* Rasio lebih lebar untuk artikel utama */
    height: auto !important;
    display: block;
    background-color: #f8f8f8;
    position: relative;
    overflow: hidden;
  }

  .image-container img, .image-container-fluid img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important; /* Memotong gambar secara otomatis agar tidak gepeng */
    object-position: center;
  }
  
  .h3-title { font-size: 1.5rem; font-weight: 800; }

  @media (max-width: 768px) {
    .image-container, .image-container-fluid {
        aspect-ratio: 16 / 9 !important;
    }
  }
</style>