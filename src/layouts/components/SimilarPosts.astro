---
import dateFormat from "@/lib/utils/dateFormat";
import { humanize, slugify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import { BiCalendarEdit, BiCategoryAlt } from "react-icons/bi";

// Menerima data posts hasil mapping dari API WordPress
type Props = {
  posts: any[];
};
const { posts } = Astro.props;
---

<div class="row gy-4 justify-center">
  {
    posts.map((post, i: number) => (
      <div class={`col-12 sm:col-6 md:col-4 ${i === 2 && "hidden md:block"}`}>
        {post.data.image && (
          <a
            href={`/blog/${post.slug}`} 
            class="similar-post-image rounded-lg block hover:text-primary overflow-hidden group shadow-sm"
          >
            <Image
              class="group-hover:scale-[1.05] transition duration-500 w-full h-full object-cover"
              src={post.data.image}
              alt={post.data.title || "Gambar Artikel Terkait"}
              width={445}
              height={230}
            />
          </a>
        )}
        
        <ul class="mt-4 text-text flex flex-wrap items-center text-sm">
          <li class="mb-2 mr-4 flex items-center flex-wrap font-medium">
            <BiCalendarEdit className="mr-1 h-[16px] w-[16px] text-gray-600" />
            {post.data.date ? dateFormat(post.data.date) : "N/A"}
          </li>
          <li class="mb-2 mr-4 flex items-center flex-wrap">
            <BiCategoryAlt className="mr-1 h-[16px] w-[16px] text-gray-600" />
            <ul class="flex flex-wrap">
              {(post.data.categories || []).map((category: string, index: number) => (
                <li class="inline-block">
                  <a
                    href={`/categories/${slugify(category)}`}
                    class="mr-2 hover:text-primary font-medium"
                  >
                    {humanize(category)}
                    {index !== post.data.categories.length - 1 && ","}
                  </a>
                </li>
              ))}
            </ul>
          </li>
        </ul>
        
        <h3 class="h5">
          <a
            href={`/blog/${post.slug}`}
            class="block hover:text-primary transition duration-300 leading-snug font-bold"
            set:html={post.data.title || "Judul Tidak Tersedia"}
          />
        </h3>
      </div>
    ))
  }
</div>

<style>
  /* Solusi untuk menyamakan tinggi gambar (Rasio 16:9) */
  .similar-post-image {
    width: 100%;
    aspect-ratio: 16 / 9 !important;
    height: auto !important;
    overflow: hidden;
    display: block;
    background-color: #f3f4f6;
  }

  .similar-post-image img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important; /* Memotong gambar secara otomatis agar sejajar */
    object-position: center;
  }
</style>