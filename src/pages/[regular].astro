---
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { render } from "astro:content";

// 1. Tambahkan pengecekan prerender jika perlu, 
// tapi karena kita sudah set output: 'server' di config, ini akan diproses di server.

export async function getStaticPaths() {
  const pages = await getSinglePage("pages");

  const paths = pages.map((page) => ({
    params: {
      regular: page.slug,
    },
    props: { page },
  }));
  return paths;
}

const { page } = Astro.props;

// 2. PROTEKSI UTAMA: Cek apakah page ada.
// Jika bot mengakses URL ngawur (seperti .php), page akan kosong.
// Kita hentikan proses di sini dan kirim 404 agar server tidak crash.
if (!page || !page.data) {
  return Astro.redirect("/404");
}

const { title, meta_title, description, image } = page.data;

// 3. Gunakan Try-Catch saat render konten untuk menghindari crash jika markdown rusak
let Content;
try {
  const rendered = await render(page);
  Content = rendered.Content;
} catch (e) {
  console.error("Render error:", e.message);
  return Astro.redirect("/404");
}
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <section class="section">
    <div class="container">
      <h1 set:html={markdownify(title)} class="h2 page-heading" />
      <div class="content">
        {Content ? <Content /> : <p>Konten tidak tersedia.</p>}
      </div>
    </div>
  </section>
</Base>